<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivHeaderInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/tiTitleInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dets" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiTitleInfo"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tiDescriptionInfo"
        app:layout_constraintEnd_toEndOf="@+id/ivHeaderInfo"
        app:layout_constraintStart_toStartOf="@+id/ivHeaderInfo"
        app:layout_constraintTop_toBottomOf="@+id/ivHeaderInfo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTitleInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Give a title to the issue" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tiDescriptionInfo"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tiTitleInfo"
        app:layout_constraintStart_toStartOf="@+id/tiTitleInfo"
        app:layout_constraintTop_toBottomOf="@+id/tiTitleInfo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDescriptionInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe the issue briefly" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>